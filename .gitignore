# Drupal 11 .gitignore
# Based on best practices from https://www.drupal.org/docs/develop/using-composer

# Ignore sensitive settings
/web/sites/*/*settings*.php
/web/sites/*/*services*.yml

# Ignore public and private file directories
/web/sites/*/files
/web/sites/*/files-public
/web/sites/*/files-private
/web/sites/*/private

# Ignore temporary and cache directories
/web/sites/*/translations
/web/sites/*/tmp
/web/sites/*/cache

# Ignore core, vendor, and contributed dependencies managed by Composer
/web/core/
/web/vendor/
/vendor/

# Ignore default files created by Drupal or Composer
/web/autoload.php
/web/composer.json
/web/composer.lock
/web/index.php
/web/robots.txt
/web/update.php
/web/web.config
/web/example.gitignore

# Ignore miscellaneous hidden configuration files
/web/.csslintrc
/web/.editorconfig
/web/.eslintignore
/web/.eslintrc.json
/web/.gitattributes
/web/.htaccess
/web/.ht.router.php

# Ignore example and readme files
/web/sites/example.settings.local.php
/web/sites/example.sites.php
/web/sites/development.services.yml
/web/README.txt
/web/LICENSE.txt
/web/INSTALL.txt

# Ignore module, profile, and theme placeholder files
/web/modules/README.txt
/web/profiles/README.txt
/web/themes/README.txt
/web/sites/README.txt

# Ignore Drush and Robo executables if stored locally
/drush.phar
/drush
/robo.phar
/robo
/composer.phar
/composer
/drupal.phar
/drupal

# Optional: Ignore your IDE/editor settings (uncomment if needed)
/.idea/
/.vscode/
/*.sublime-workspace
/*.sublime-project

# Optional: Ignore OS or system files
.DS_Store
Thumbs.db
